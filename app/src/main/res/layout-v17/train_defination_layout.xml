<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:layout_collapseParallaxMultiplier="1.0">


    <android.support.v7.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3">

        <View
            android:id="@+id/top_background"
            android:background="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView


            android:id="@+id/grammar_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/sanf_regular"

            android:text="adjective"
            app:layout_constraintBottom_toBottomOf="@id/top_background"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="@+id/top_background" />

        <TextView

            android:id="@+id/pronunciation_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sanf_regular"

            android:text="adjective"
            app:layout_constraintBottom_toBottomOf="@+id/top_background"
            app:layout_constraintStart_toEndOf="@id/grammar_train"

            app:layout_constraintTop_toTopOf="@id/top_background" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/train_speaker_icon"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:padding="5dp"

            android:background="#00000000"
            app:layout_constraintBottom_toBottomOf="@+id/pronunciation_train"
            app:layout_constraintStart_toEndOf="@+id/pronunciation_train"

            app:layout_constraintTop_toTopOf="@+id/pronunciation_train"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="#ffffff"
            fancy:fb_focusColor="@color/colorPrimary"
            fancy:fb_ghost="true"

            fancy:fb_iconResource="@drawable/speak"
            fancy:fb_radius="100000dp"
            fancy:fb_text="" />


        <TextView
            android:id="@+id/english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_bar_dot"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:text="English"
            android:textColor="#fff"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_background" />

        <TextView


            android:id="@+id/translation_train"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sanfrancisco_medium"
            android:text="elementsfdfsdfsdfsfddfdfffddddfdfdfdfdffffffffffffdfdfdfdfdddddddddddfdffffffs"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/english" />

        <TextView
            android:id="@+id/spanish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/bottom_bar_dot"
            android:gravity="center"
            android:text="Spanish"


            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/translation_train" />

        <TextView

            android:id="@+id/spanish_translation_train"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sanfrancisco_medium"
            android:text="complete; including all ordfffdfdfdfd nearly all elements or aspects of something"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spanish" />


        <TextView
            android:id="@+id/example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_bar_dot"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:text="examples"

            android:textSize="12sp"
            android:textColor="#fff"


            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spanish_translation_train" />


        <TextView
            android:id="@+id/example1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sanf_regular"
            android:text="dkfskfsfjsflkddddddddddddddddddddddddddddddddddddddddddddjslkfjslfjlsfjlsjflsfsfsjlkjldjj"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/example" />

        <TextView
            android:id="@+id/example2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:layout_marginTop="10dp"
            android:fontFamily="@font/sanf_regular"
            android:text="dkfskfsfjsflkjsdfsssssssssssssssssssssssssssslkfjslfjlsfjlsjflsfsfsjlkjldjj"
            app:layout_constraintBottom_toTopOf="@id/example3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/example1" />

        <TextView
            android:id="@+id/example3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:fontFamily="@font/sanf_regular"
            android:text="dkfskfsfjsflkjsdfsssssssssssssssssssssssssssslkfjslfjlsfjlsjflsfsfsjlkjldjj"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/favorite_card_example2" />


    </android.support.constraint.ConstraintLayout>




</android.support.v7.widget.CardView>

</RelativeLayout>