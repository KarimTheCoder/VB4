<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    app:layout_collapseParallaxMultiplier="1.0">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3">

            <View
                android:id="@+id/top_background"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView


                android:id="@+id/grammar_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/sanf_regular"
                android:text="adjective"

                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/top_background"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintTop_toTopOf="@+id/top_background" />

            <TextView

                android:id="@+id/pronunciation_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sanf_regular"
                android:text="adjective"

                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/top_background"
                app:layout_constraintLeft_toRightOf="@id/grammar_train"

                app:layout_constraintTop_toTopOf="@id/top_background" />

            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/train_speaker_icon"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"

                android:background="#00000000"
                app:layout_constraintBottom_toBottomOf="@+id/pronunciation_train"
                app:layout_constraintLeft_toRightOf="@+id/pronunciation_train"

                app:layout_constraintTop_toTopOf="@+id/pronunciation_train"
                fancy:fb_borderWidth="2dp"
                fancy:fb_defaultColor="#ffffff"
                fancy:fb_focusColor="@color/colorPrimary"
                fancy:fb_ghost="true"

                fancy:fb_iconResource="@drawable/speak"
                fancy:fb_radius="100000dp"
                fancy:fb_text=""
                ></mehdi.sakout.fancybuttons.FancyButton>


            <TextView
                android:id="@+id/english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_bar_dot"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="English"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_background" />

            <TextView


                android:id="@+id/translation_train"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanfrancisco_medium"
                android:text="elementsfdfsdfsdfsfddfdfffddddfdfdfdfdffffffffffffdfdfdfdfdddddddddddfdffffffs"

                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/english" />

            <TextView
                android:id="@+id/spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#fff"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="@drawable/bottom_bar_dot"
                android:gravity="center"
                android:text="Spanish"


                android:textSize="22sp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/translation_train" />

            <TextView

                android:id="@+id/spanish_translation_train"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanfrancisco_medium"
                android:text="complete; including all ordfffdfdfdfd nearly all elements or aspects of something"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spanish" />


            <TextView
                android:id="@+id/example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bottom_bar_dot"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="examples"

                android:textSize="22sp"
                android:textColor="#fff"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spanish_translation_train" />


            <TextView
                android:id="@+id/example1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanf_regular"
                android:text="dkfskfsfjsflkjslkfjslfjlsfjlsjflsfsfsjlkjldjj"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/example" />

            <TextView
                android:id="@+id/example2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sanf_regular"

                android:text="dkfskfsfjsflkjslkfjslfjlsfjlsjflsfsfsjlkjldjj"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@id/example3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/example1" />

            <TextView
                android:id="@+id/example3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/sanf_regular"

                android:text="dkfskfsfjsflkjslkfjslfjlsfjlsjflsfsfsjlkjldjj"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/example2" />



        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>
</RelativeLayout>