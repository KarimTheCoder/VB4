<resources >

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/primary_text_color</item>

    </style>
    <style name="Theme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient</item>
    </style>


    <style name="DialogTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="MyToast">
        <item name="android:textColor">#fff</item>
        <!--<item name="android:textStyle">bold</item> only bold!-->
        <item name="android:fontFamily">fonts/Comfortaa-Regular.ttf</item> For custom fonts just add the path -> fonts/myfont.ttf
        <item name="android:colorBackground">@color/red</item>
        <item name="android:radius">10dp</item>  radius for corners of the toast shape
        <item name="android:alpha">255</item>   value between 0-255 where 255 is full solid
        <item name="android:icon">@drawable/ic_mama_mia</item>  drawable id of the icon. R.drawable.xx
    </style>

    <style name="wrong">
        <item name="android:textColor">#fff</item>
        <!--<item name="android:textStyle">bold</item> only bold!-->
        <item name="android:fontFamily">fonts/Comfortaa-Regular.ttf</item> For custom fonts just add the path -> fonts/myfont.ttf
        <item name="android:colorBackground">@color/red</item>
        <item name="android:radius">10dp</item>  radius for corners of the toast shape
        <item name="android:alpha">255</item>   value between 0-255 where 255 is full solid
        <item name="android:icon">@drawable/ic_wrong</item>  drawable id of the icon. R.drawable.xx
    </style>

    <style name="wrong_again">
        <item name="android:textColor">#fff</item>
        <!--<item name="android:textStyle">bold</item> only bold!-->
        <item name="android:fontFamily">fonts/Comfortaa-Regular.ttf</item> For custom fonts just add the path -> fonts/myfont.ttf
        <item name="android:colorBackground">@color/red</item>
        <item name="android:radius">10dp</item>  radius for corners of the toast shape
        <item name="android:alpha">255</item>   value between 0-255 where 255 is full solid
        <item name="android:icon">@drawable/ic_wrong_again</item>  drawable id of the icon. R.drawable.xx
    </style>

    <style name="correct">
        <item name="android:textColor">#fff</item>
        <!--<item name="android:textStyle">bold</item> only bold!-->
        <item name="android:fontFamily">fonts/Comfortaa-Regular.ttf</item> For custom fonts just add the path -> fonts/myfont.ttf
        <item name="android:colorBackground">#00C853</item>
        <item name="android:radius">10dp</item>  radius for corners of the toast shape
        <item name="android:alpha">255</item>   value between 0-255 where 255 is full solid
        <item name="android:icon">@drawable/ic_inteligente</item>  drawable id of the icon. R.drawable.xx
    </style>

    <style name="favorite">
        <item name="android:textColor">#fff</item>
        <!--<item name="android:textStyle">bold</item> only bold!-->
        <item name="android:fontFamily">fonts/Comfortaa-Regular.ttf</item> For custom fonts just add the path -> fonts/myfont.ttf
        <item name="android:colorBackground">@color/beginnerS</item>
        <item name="android:radius">10dp</item>  radius for corners of the toast shape
        <item name="android:alpha">255</item>   value between 0-255 where 255 is full solid

    </style>


    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>


    // Text Styles

    <style name="primary_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/productbold</item>
    </style>

    <style name="primary_text_style_white" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text_color_white</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/productbold</item>
    </style>

    <style name="secondary_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/productreg</item>
    </style>

    <style name="secondary_text_style_light" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text_color_light</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/productreg</item>
    </style>

    <style name="third_text_style" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/third_text_color</item>
    <item name="android:textSize">14sp</item>
    <item name="fontFamily">@font/productreg</item>
    </style>

    <style name="third_text_style_white" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text_color_white</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/productreg</item>
    </style>

    ///ABOVE TEXT STYLE

    /// CARD STYLE
    <style name="primary_card_style" parent="CardView">

    <item name="cardCornerRadius">5dp</item>
    <item name="cardElevation">2dp</item>
    <item name="android:layout_marginRight">@dimen/keyline_2</item>
    <item name="android:layout_marginLeft">@dimen/keyline_2</item>
    <item name="android:layout_marginTop">@dimen/keyline_2</item>
    <item name="android:layout_marginBottom">@dimen/keyline_2</item>
   </style>

    <style name="word_card_style" parent="CardView">

        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginRight">@dimen/keyline_2</item>
        <item name="android:layout_marginLeft">@dimen/keyline_2</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
        <item name="android:layout_marginBottom">@dimen/keyline_2</item>
    </style>

    <style name="rate_card_style" parent="CardView">

        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginRight">@dimen/keyline_2</item>
        <item name="android:layout_marginLeft">@dimen/keyline_2</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
        <item name="android:layout_marginBottom">@dimen/keyline_2</item>
    </style>

    <style name="home_card_style" parent="CardView">

    <item name="cardCornerRadius">30dp</item>
    <item name="android:layout_marginRight">@dimen/keyline_2</item>
    <item name="android:layout_marginLeft">@dimen/keyline_2</item>
    <item name="android:layout_marginTop">@dimen/keyline_2</item>
    <item name="android:layout_marginBottom">@dimen/keyline_2</item>
</style>

    <style name="train_finished_card_style" parent="CardView">
        <item name="elevation">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/train_finished_recycerview_background_color</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:layout_marginTop">@dimen/keyline_2</item>
        <item name="android:layout_marginBottom">@dimen/keyline_2</item>
    </style>

    <style name="purchase_card_style" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/purchase_card_backgroundcolor</item>

    </style>

    <style name="home_title_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary_text_color_white</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/productbold</item>
        <item name="android:textAllCaps">true</item>


    </style>

    // Above Card Styles

    // Train Text Styles

    <style name="second_word_text_style" parent="TextAppearance.AppCompat">
    <item name="android:textColor">@color/primary_text_color</item>
    <item name="android:textSize">18sp</item>
    <item name="fontFamily">@font/productbold</item>

    </style>

    <style name="third_word_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/sentence_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/productreg</item>


    </style>

    <style name="forth_word_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondary_text_color_light</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/productreg</item>

    </style>
    //Train Text Styles


    // Spinner Styles

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="backgroundTint">@color/spinnerColor</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>
    // Above Spinner Styles


    // Dialog Styles
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/card_background_color</item>
        <item name="android:radius">15dp</item>
        <item name="alpha">0</item>
        <item name="dialogCornerRadius">20dp</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        <item name="textColorAlertDialogListItem">@color/secondary_text_color</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    // Switch Style

    <style name="primary_switchStyle">
        <item name="sb_checked_color">@color/colorPrimary</item>
        <item name="sb_uncheckcircle_color">@color/colorPrimary</item>
        <item name="sb_uncheck_color">@color/colorPrimary</item>


    </style>

</resources>
