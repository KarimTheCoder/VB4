<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/most_mistaken_card"
        style="@style/train_finished_card_style"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="@dimen/keyline_1"
        android:layout_marginTop="@dimen/keyline_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/train_finished_recycler_view_word"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/keyline_4"
                android:layout_marginEnd="@dimen/keyline_4"
                android:layout_marginStart="@dimen/keyline_4"
                android:layout_marginTop="@dimen/keyline_4"
                android:text="@string/word"
                style="@style/secondary_text_style"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                fancy:layout_constraintEnd_toStartOf="@+id/train_finished_recycler_view_favorite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/train_finished_recycler_view_favorite"
                android:layout_width="71dp"
                android:layout_height="35dp"
                android:layout_marginBottom="@dimen/keyline_4"
                android:layout_marginEnd="@dimen/keyline_4"
                android:layout_marginTop="@dimen/keyline_4"
                android:padding="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/train_finished_recycler_view_unlearn"
                app:strokeColor="#ffffff"
                app:strokeWidth="2dp"
                app:backgroundTint="@android:color/transparent"
                app:rippleColor="@color/colorPrimary"
                app:cornerRadius="18dp"
                app:icon="@drawable/ic_favorite_icon"
                app:iconTint="#ffffff"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/train_finished_recycler_view_unlearn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/keyline_4"
                android:layout_marginEnd="@dimen/keyline_4"
                android:layout_marginTop="@dimen/keyline_4"
                android:elevation="3dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/primary_text_color_white"
                app:strokeWidth="2dp"
                app:backgroundTint="@color/primary_text_color_white"
                app:rippleColor="@color/colorPrimary"
                app:cornerRadius="30dp"
                android:text="Unlearn"
                android:textColor="@color/lowColor"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>